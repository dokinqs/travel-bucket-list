<div class="location-container">
  <% if (location.region === 'Asia') { %>
    <div class="emoji">⭐️</div>
  <% } %>
  <% if (location.region === 'Europe') { %>
    <div class="emoji">✈️</div>
  <% } %>
 
  <!-- <h2># <%= location.locations_id %></h2> -->
  <img src="<%=location.flag%>" max-width="100" height="70" alt="<%= location.cname %>" /><br>

  <div class="location-cname"><%= location.cname %></div>
  <p><%= location.region %></p>
  <p><%= location.currencyname %></p>

  <form action="/favs/<%=location.locations_id%>" method="POST">
    <button class="edit" type="submit" name="button" value="<%= location.locations_id %>">
      Add to Favorites</button>
  </form>

  <form action="/locations/<%= location.locations_id %>?_method=DELETE" method="POST">
    <button class="delete" type="submit" name="button">Remove Country</button>
  </form>
</div>