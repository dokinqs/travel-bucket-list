<div class="location-container">
  <h2># <%= location.locations_id %></h2>
  <img src="<%=location.flagpng%>" width="100" alt="<%=location.cname%>" /><br>
  <!-- <div><%= JSON.stringify(location) %></div> -->
  <div class="location-cname">
    Country: <%= location.cname %>
  </div>
  <p>Region: <%= location.region %></p>
  <!-- <p>Currency: <%= location.currencyname %></p> -->
  <form action="/favs" class='post' method="POST">
    <button class="edit" type="submit" value="Add">
      Add to Favorites</button>
  </form>
  <br>

  <form action="/locations/<%= location.locations_id %>?_method=DELETE" method="POST">
    <button class="delete" type="submit" name="button">Delete location</button>
  </form>
</div>